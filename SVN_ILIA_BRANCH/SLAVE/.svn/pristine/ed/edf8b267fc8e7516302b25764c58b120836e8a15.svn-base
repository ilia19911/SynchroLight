#include "include.h"

extern uint8_t 				my_ledmap[X_MATRIX_SIZE][Y_MATRIX_SIZE];

//================================================================================
void  	led_map_init(leds *this_leds)
{
		my_map.my_leds = this_leds;
}
//================================================================================
void led_map_set_maping()
{
	
	for(uint16_t i = 0; i < X_MATRIX_SIZE; i++)
	{
		memcpy(my_map.matrix[i],my_ledmap[i],Y_MATRIX_SIZE);
	}
}
//================================================================================
uint8_t led_map_set_pixel(uint8_t x, uint8_t y, leds this_leds)
{
	uint16_t led_number = my_map.matrix[x][y];
	my_map.my_leds[led_number].red 	 =	this_leds.red;
	my_map.my_leds[led_number].blue  =	this_leds.green; //// не смог нормально перевернуть, перевернул здесь ред  и грин
	my_map.my_leds[led_number].green =	this_leds.blue;
	return 0;
}
//================================================================================
leds get_led_state(uint8_t x, uint8_t y)
{
	uint16_t led_number = my_map.matrix[x][y];
	
	return my_map.my_leds[led_number];
}
